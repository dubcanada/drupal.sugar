    <completion string="$conf" />
    <completion string="$cookie_domain" />
    <completion string="$custom_theme" />
    <completion string="$db_prefix" />
    <completion string="$db_type" />
    <completion string="$db_url" />
    <completion string="$element" />
    <completion string="$forum_topic_list_header" />
    <completion string="$id" />
    <completion string="$image" />
    <completion string="$installed_profile" />
    <completion string="$install_locale" />
    <completion string="$item" />
    <completion string="$items" />
    <completion string="$language" />
    <completion string="$last_result" />
    <completion string="$menu_admin" />
    <completion string="$multibyte" />
    <completion string="$nid" />
    <completion string="$pager_page_array" />
    <completion string="$pager_total" />
    <completion string="$pager_total_items" />
    <completion string="$profile" />
    <completion string="$queries" />
    <completion string="$recent_activity" />
    <completion string="$tag" />
    <completion string="$theme" />
    <completion string="$theme_engine" />
    <completion string="$theme_info" />
    <completion string="$theme_key" />
    <completion string="$theme_path" />
    <completion string="$timers" />
